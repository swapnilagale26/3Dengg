{{#fplogos}}
{{#showfpblock6hr}}<hr class="hr-small" />{{/showfpblock6hr}}

<div id="block6" class="s-logos">

  <div class="l-container s-special-box row section-padding no-gutters justify-content-center align-items-center text-center">

    {{#showfpblock6intro}}
    <div class="s-section-desc col-sm-11 col-md-8 col-lg-5 ml-auto mr-auto text-center">
      {{#fplogostitle}}<h3 class="c-section-desc-heading">{{{fplogostitle}}}</h2>{{/fplogostitle}}
      {{#fplogoscontent}}<div class="c-section-desc">{{{fplogoscontent}}}</div>{{/fplogoscontent}}
    </div>
    {{/showfpblock6intro}}

    <div class="col-12 row justify-content-center align-items-center text-center mt-4">
      {{#logos}}
      <div id="blocklogos-{{{fpblocklogosno}}}" class="c-logos-item col-sm-6 {{logosno}} text-center p-4 my-2">
          {{#logosurl}}<a href="{{{logosurl}}}">{{/logosurl}}
              {{#image}}<img src="{{{image}}}" alt="{{{logosname}}}" class="c-logos-img"/>{{/image}}
          {{#logosurl}}</a>{{/logosurl}}
      </div>
      {{/logos}}
    </div>
  </div>
</div>
{{/fplogos}}
