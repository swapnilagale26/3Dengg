{{#fpblock9}}
{{#showfpblock9hr}}<hr class="hr-small" />{{/showfpblock9hr}}

<div id="block9" class="l-container section-padding">

  {{#showfpblock9intro}}
  <div class="s-section-desc col-sm-11 col-md-8 col-lg-5 ml-auto mr-auto mb-5 text-center">
    {{#fpblock9title}}<h3 class="c-section-desc-heading">{{{fpblock9title}}}</h3>{{/fpblock9title}}
    {{#fpblock9content}}<div class="c-section-desc">{{{fpblock9content}}}</div>{{/fpblock9content}}
  </div>
  {{/showfpblock9intro}}

  <div class="accordion" id="accordionFaq">

    {{#block9}}
    <div class="accordion" id="block9-{{{fpblock9no}}}">

      {{#fpblock9question}}
      <div class="accordion-header" id="headingOne">
          <button class="btn btn-accordion text-left" type="button" data-toggle="collapse" data-target="#accordion-{{{fpblock9no}}}" aria-expanded="false" aria-controls="accordion-{{{fpblock9no}}}">
            {{{fpblock9question}}}
            <i class="accordion-icon fas fa-plus"></i>
          </button>
      </div>
      {{/fpblock9question}}

      {{#fpblock9answer}}
      <div id="accordion-{{{fpblock9no}}}" class="collapse" aria-labelledby="headingOne" data-parent="#accordionFaq">
        <div class="accordion-body">
          {{{fpblock9answer}}}
        </div>
      </div>
      {{/fpblock9answer}}

    </div>
    {{/block9}}

  </div>

</div>
{{/fpblock9}}
