{{!
    @template course_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10
            }
        ]
    }
}}
<div class="card c-course-box mt-0" role="listitem"
    data-region="course-content"
    data-course-id="{{{id}}}">

    <div class="c-course-content">
      <div class="card-img-top myoverviewimg courseimage" style='background-image: url("{{{courseimage}}}"); background-size: cover;'>

        <div class="c-course-box-content" id="course-info-container-{{id}}-{{uniqid}}">

            {{$menu}}{{/menu}}

            <div class="c-course-category d-flex w-100 flex-wrap">
                {{$coursecategory}}{{{coursecategory}}}{{/coursecategory}}
                {{#showshortname}}
                {{$divider}}{{/divider}}
                <span class="sr-only">
                    {{#str}}aria:courseshortname, core_course{{/str}}
                </span>
                <div>

                  <a href="{{viewurl}}" tabindex="-1">
                    {{{shortname}}}
                  </a>

                </div>
                {{/showshortname}}
            </div>
            <a href="{{viewurl}}" class="course-box-title">
                {{> core_course/favouriteicon }}
                <span class="sr-only">
                        {{#str}}aria:coursename, core_course{{/str}}
                    </span>

                {{^visible}}<span class="tag tag-danger mb-3">{{#str}} hiddenfromstudents {{/str}}</span>{{/visible}}
                {{$coursename}}{{/coursename}}
            </a>

            

        </div>

        <div class="c-course-progress">
          {{$progress}}{{/progress}}
        </div>

      </div>
    </div>

</div>
